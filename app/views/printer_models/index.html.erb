<h1>Modelli stampanti presenti in Unibo</h1>

<dl class="dl-horizontal">
  <% old_vendor = '' %>  
  <% @printer_models.each do |printer_model| %>
    <% if old_vendor != (vendor = printer_model.vendor.name) %>  
      <dt><%= old_vendor = vendor %></dt>
    <% end %>
    <dd>
    <%= link_to printer_model.name %>
    <span class='actions'>
      <%= link_to_edit edit_printer_model_path(printer_model) %>
      <%= link_to icon('plus'), new_printer_model_printer_path(printer_model) %>  
    </span>
    </dd>
  <% end %>
</dl>

<%= link_to_new 'Aggiungi modello', new_printer_model_path %>


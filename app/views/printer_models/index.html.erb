<h1><%= t :printer_models %></h1>

<ul class="list-group">
  <% @printer_models.group_by {|tm| tm.vendor}.each do |vendor, models| %>
    <li class="list-group-item"><%= vendor %></li>
    <div class="models_list">
      <% models.each do |model| %>  
        <span class="btn btn-outline-info m-1"> <%= modal_link_to model.name, printer_model_path(model) %> </span>
      <% end %>
    </div>
  <% end %>
</ul>

<p class="mt-3">
  <%= link_to_new t(:add_new_printer_model), new_printer_model_path %> - <%= link_to_back current_organization_root_path %>
</p>

<%= javascript_tag do %>  
  $(document).ready(function(){
    $(".models_list").toggle();
    $("li").click(function() {
      $(this).css('font-weight', 'bold');
      $(this).next(".models_list").slideToggle();
    });
  });
<% end %>

<h1>Nuovo amministratore per <%= @organization %> </h1>

<%= horizontal_form_for [@organization, @admin] do |admin| %>
  <%= admin.dm_error_notification %>  
  <%= admin.input :user_upn, hint: 'Indicare la mail istituzionale', placeholder: 'nome.cognome@unibo.it' %>
  <%= admin.submit "Aggiungi" %>  
<% end %>

<%= dm_card title: 'Sono disponibili toner per le seguenti stampanti' do %>

  <% old_vendor = nil %>  
  <dl>
    <% @printer_models.each do |printer_model| %>  
      <% if old_vendor != printer_model.vendor and old_vendor = printer_model.vendor %>  
        <dt><%= printer_model.vendor %></dt>
      <% end %>
      <dd style="display: inline-block">
      <%= modal_link_to printer_model.name, printer_model_path(printer_model), addclass: "btn btn-outline-primary" %>
      </dd>
    <% end %>
  </dl>
<% end %>

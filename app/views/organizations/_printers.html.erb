<ul>
  <% organization.printers.order('printers.name').includes(printer_model: :vendor).each do |printer| %>  
    <li>
      <span title="<%= printer.description %>">
        <strong><%= printer.name %></strong>
      </span> 
      <small>(<%= printer.printer_model %>)</small>
      <span class="actions">
        <%= link_to_edit edit_printer_path(printer) %> 
        <%= link_to_delete printer_path(printer) %> 
        <%= link_to(icon('external-link'), printer.url, target: 'new') if printer.url %>  
      </span>
    </li>
  <% end %>
</ul>
<%= link_to_new 'nuova stampante', new_organization_printer_path(organization) %>  


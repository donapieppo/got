<% if policy(@toner_model).edit? %>
  <%= link_to dm_icon("edit", text: "Modifica il modello"), [:edit, @toner_model], class: :button %>
<% end %>

<% if policy(current_organization).add_toner? %>  
  <% if toner = current_organization.toners.where(toner_model_id: @toner_model.id).first %>  
    <%= link_to dm_icon("warehouse", text: "Modifica la presenza nella struttura #{current_organization.name}"), edit_toner_path(toner), class: :button %>  
  <% else %>
    <%= link_to dm_icon("plus", text: "Aggiungi un toner a #{current_organization.name}"), new_toner_model_toner_path(@toner_model), class: :button %>
  <% end %>
<% end %>

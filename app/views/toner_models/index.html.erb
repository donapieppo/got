<h1>Modelli di toner</h1>

<dl class="dl-horizontal">
  <% @toner_models.group_by {|tm| tm.vendor}.each do |vendor, models| %>
    <dt><%= vendor %></dt>
    <% models.each do |model| %>  
      <dd>
        <strong><%= link_to model.name, edit_toner_model_path(model) %></strong>
        <small>(<%= model.printer_models.map(&:name).join(', ') %>)</small>
      </dd>
    <% end %>
  <% end %>
</dl>

<%= link_to_new 'Aggiungi modello di toner', new_toner_model_path %>  

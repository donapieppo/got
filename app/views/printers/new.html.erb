<%= horizontal_form_for([@organization, @printer]) do |printer| %>
  <%= printer.dm_error_notification %>  

  <div class="col-md-3">
    <p class="title">Marca</p>
    <% Vendor.order(:name).each do |vendor| %>    
      <input type="radio" name="vendor_id" value="<%= vendor.id %>"/> <%= vendor.name %> <br/>
    <% end %>
  </div>
  <div class="col-md-3">
    <p class="title">Modello</p>
    <div id="models">
    </div>
  </div>
  <div class="col-md-6" id="details">
    <p class="title">Dettagli</p>
    <%= printer.input :name %>  
    <%= printer.input :description, hint: 'Campo opzionale. Si puÃ² indicare dove si trova la stampante o altre note' %>  
    <%= printer.input :url %>  
    <%= printer.submit "Aggiungi al posseduto del #{@current_organization.name}" %>
  </div>
<% end %>

<%= javascript_tag do %>  
  <%= render partial: 'printer_js', formats: :js %>  
<% end %>
